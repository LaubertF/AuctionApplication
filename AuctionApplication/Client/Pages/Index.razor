@page "/"

@using Microsoft.AspNetCore.SignalR.Client
@using AuctionApplication.Shared
@using System.Runtime.InteropServices.ComTypes
@inject NavigationManager Navigation
@implements IAsyncDisposable
@inject HttpClient Http
<PageTitle>Home</PageTitle>

<div class="form-group">
    <label>
        User:
        <input @bind="userInput"/>
    </label>
</div>
<div class="form-group">
    <label>
        Message:
        <input @bind="messageInput" size="50"/>
    </label>
</div>
<button @onclick="Send" disabled="@(!IsConnected)">Send</button>

<hr>

<ul id="messagesList">
    @foreach (var message in messages)
    {
        <li>@message</li>
    }
</ul>

@code {
    private HubConnection? hubConnection;
    private List<string> messages = new List<string>();
    private string? userInput;
    private decimal? messageInput;

    protected override async Task OnInitializedAsync()
    {
        hubConnection = new HubConnectionBuilder()
            .WithUrl(Navigation.ToAbsoluteUri("/chathub"))
            .Build();

        hubConnection.On<string, string>("ReceiveMessage", (user, message) =>
        {
            Console.WriteLine("ReceiveMessage");
            var encodedMsg = $"{user}: {message}";
            messages.Add(encodedMsg);
            InvokeAsync(StateHasChanged);
        });

        hubConnection.On<Bid>("SendBid", (bid) =>
        {
            var encodedMsg = $"{bid.Bidder.Name} bid {bid.Value}";
            messages.Add(encodedMsg);
            InvokeAsync(StateHasChanged);
        });
        hubConnection.On<List<Bid>>("ReceiveBids", (bids) =>
        {
            Console.WriteLine(bids.Count);
            bids.ForEach(bid =>
            {
                var encodedMsg = $"bid {bid.Value}";
                messages.Add(encodedMsg);
            });
            InvokeAsync(StateHasChanged);
        });


        await hubConnection.StartAsync();
        await hubConnection.SendAsync("GetBids", 1);
    }

    private async Task Send()
    {
        if (hubConnection is not null)
        {
    //await hubConnection.SendAsync("SendMessage", userInput, messageInput);
            await FormSubmitted();
            await hubConnection.SendAsync("Bid", userInput, messageInput);
        }
    }

    public bool IsConnected =>
        hubConnection?.State == HubConnectionState.Connected;

    public async ValueTask DisposeAsync()
    {
        if (hubConnection is not null)
        {
            await hubConnection.DisposeAsync();
        }
    }

    private async Task FormSubmitted()
    {
        var response = await Http.PostAsJsonAsync("/Auctions/1/Bid", messageInput);
        Console.WriteLine(await response.Content.ReadAsStringAsync());
    }

}